{
  "name": "memory-system",
  "version": "1.0.0",
  "description": "Tiered memory architecture for OpenClaw agents with semantic search and warmâ†’cold promotion",
  "author": "OpenClaw Community",
  "license": "MIT",
  "minOpenClawVersion": "0.1.0",
  "entryPoints": {
    "cli": "utils/memory_cli.py",
    "init": "install.sh"
  },
  "files": [
    "SKILL.md",
    "README.md",
    "install.sh",
    "setup.py",
    "templates/*",
    "utils/*",
    "docs/*"
  ],
  "dependencies": {
    "python": ">=3.8",
    "packages": ["numpy", "requests"],
    "optional": {
      "ollama": "For semantic embeddings",
      "nodejs": ">=16 for decay-weighted search"
    }
  },
  "config": {
    "memoryDir": "${WORKSPACE}/memory",
    "env": {
      "MEMORY_DIR": "${WORKSPACE}/memory",
      "OLLAMA_HOST": "http://localhost:11434"
    }
  },
  "commands": {
    "init": "python utils/memory_cli.py init",
    "daily": "python utils/memory_cli.py daily",
    "search": "python utils/memory_cli.py search",
    "maintain": "python utils/memory_cli.py maintain",
    "reflect": "python utils/memory_cli.py reflect",
    "stats": "python utils/memory_cli.py stats"
  },
  "documentation": {
    "main": "SKILL.md",
    "readme": "README.md",
    "integration": "docs/INTEGRATION.md",
    "api": "docs/API.md"
  },
  "tags": ["memory", "persistence", "search", "cognitive-architecture"],
  "examples": [
    "memory search 'project notes' --semantic",
    "memory reflect --miss 'Forgot X' --fix 'Always check X' --tag speed",
    "memory maintain"
  ]
}
